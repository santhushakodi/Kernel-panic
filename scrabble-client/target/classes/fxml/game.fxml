<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="gamePane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.scrabble.client.controller.GameViewController" styleClass="game-root">
    
    <!-- Top Menu Bar -->
    <top>
        <MenuBar styleClass="game-menu-bar">
            <Menu text="Game">
                <MenuItem text="New Game" onAction="#handleNewGame"/>
                <MenuItem text="Save Game" onAction="#handleSaveGame"/>
                <SeparatorMenuItem/>
                <MenuItem text="Leave Game" onAction="#handleLeaveGame"/>
                <MenuItem text="Exit" onAction="#handleExit"/>
            </Menu>
            <Menu text="View">
                <CheckMenuItem text="Show Grid" fx:id="showGridMenuItem" selected="false" onAction="#handleToggleGrid"/>
                <CheckMenuItem text="Show Coordinates" fx:id="showCoordsMenuItem" selected="false" onAction="#handleToggleCoordinates"/>
                <CheckMenuItem text="Highlight Last Move" fx:id="highlightLastMoveMenuItem" selected="true"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="Game Rules" onAction="#handleShowRules"/>
                <MenuItem text="Keyboard Shortcuts" onAction="#handleShowShortcuts"/>
                <SeparatorMenuItem/>
                <MenuItem text="About" onAction="#handleAbout"/>
            </Menu>
        </MenuBar>
    </top>

    
    <!-- Left Panel - Player Scores and Game Info -->
    <left>
        <VBox fx:id="leftPanel" styleClass="left-panel" spacing="10" minWidth="200" maxWidth="250">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <!-- Game Status -->
            <VBox styleClass="game-status-panel" spacing="5">
                <Label text="Game Status" styleClass="panel-header"/>
                <Separator/>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Game ID:" styleClass="info-label"/>
                    <Label fx:id="gameIdLabel" text="--" styleClass="info-value"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Turn:" styleClass="info-label"/>
                    <Label fx:id="currentTurnLabel" text="--" styleClass="info-value"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Move:" styleClass="info-label"/>
                    <Label fx:id="moveCountLabel" text="0" styleClass="info-value"/>
                </HBox>
            </VBox>
            
            <!-- Tiles Remaining -->
            <VBox styleClass="tiles-info-panel" spacing="5">
                <Label text="Tile Bag" styleClass="panel-header"/>
                <Separator/>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Remaining:" styleClass="info-label"/>
                    <Label fx:id="tilesRemainingLabel" text="100" styleClass="info-value"/>
                </HBox>
                <ProgressBar fx:id="tilesRemainingProgress" prefWidth="160" progress="1.0"/>
            </VBox>
            
            <!-- Player Scores - This will be populated programmatically -->
            <VBox fx:id="scoresContainer" styleClass="scores-panel" spacing="5">
                <Label text="Scores" styleClass="panel-header"/>
                <Separator/>
            </VBox>
            
            <!-- Game Timer -->
            <VBox styleClass="timer-panel" spacing="5">
                <Label text="Timer" styleClass="panel-header"/>
                <Separator/>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Turn Time:" styleClass="info-label"/>
                    <Label fx:id="turnTimerLabel" text="--:--" styleClass="info-value"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Game Time:" styleClass="info-label"/>
                    <Label fx:id="gameTimerLabel" text="--:--" styleClass="info-value"/>
                </HBox>
            </VBox>
            
            <!-- Spacer to push content to top -->
            <Region VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>
    
    <!-- Right Panel - Chat/Messages (Future Feature) -->
    <right>
        <VBox fx:id="rightPanel" styleClass="right-panel" spacing="10" minWidth="200" maxWidth="250" visible="false">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <!-- Game Log/Chat -->
            <VBox styleClass="chat-panel" VBox.vgrow="ALWAYS">
                <Label text="Game Log" styleClass="panel-header"/>
                <Separator/>
                <ScrollPane fx:id="gameLogScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <VBox fx:id="gameLogContainer" spacing="2"/>
                </ScrollPane>
                
                <!-- Chat Input (if multiplayer) -->
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <TextField fx:id="chatInput" HBox.hgrow="ALWAYS" promptText="Type message..."/>
                    <Button fx:id="sendChatButton" text="Send" minWidth="50"/>
                </HBox>
            </VBox>
        </VBox>
    </right>
    
    <!-- Center - Game Board -->
    <center>
        <StackPane styleClass="board-container">
            <!-- The GameBoardView will be added programmatically here -->
            <ScrollPane fx:id="boardScrollPane" fitToWidth="true" fitToHeight="true" pannable="true">
                <content>
                    <!-- GameBoardView will be inserted here by the controller -->
                </content>
            </ScrollPane>
        </StackPane>
    </center>

    
    <!-- Bottom Panel - Player Rack and Controls -->
    <bottom>
        <VBox styleClass="bottom-panel" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <!-- Current Move Info -->
            <HBox fx:id="currentMovePanel" alignment="CENTER_LEFT" spacing="15" styleClass="move-info-panel">
                <Label text="Current Move:" styleClass="move-label"/>
                <Label fx:id="currentMoveScoreLabel" text="Score: 0" styleClass="score-preview"/>
                <Label fx:id="currentMoveWordsLabel" text="Words: --" styleClass="words-preview"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="moveValidationLabel" text="" styleClass="validation-message"/>
            </HBox>
            
            <!-- Player Rack and Game Controls -->
            <HBox fx:id="bottomPanel" alignment="CENTER" spacing="20" minHeight="80">
                <!-- Player Rack Container -->
                <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Your Tiles" styleClass="rack-label"/>
                    <!-- PlayerRackView will be added programmatically here -->
                    <HBox fx:id="rackContainer" alignment="CENTER" spacing="5" minHeight="60" maxHeight="60">
                        <!-- PlayerRackView component will be inserted here -->
                    </HBox>
                </VBox>
                
                <!-- Game Controls -->
                <VBox alignment="CENTER" spacing="8" minWidth="200">
                    <!-- Primary Actions -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="submitMoveButton" text="Submit Move" styleClass="primary-button" 
                                minWidth="100" disable="true" onAction="#handleSubmitMove"/>
                        <Button fx:id="recallTilesButton" text="Recall" styleClass="secondary-button" 
                                minWidth="80" disable="true" onAction="#handleRecallTiles"/>
                    </HBox>
                    
                    <!-- Secondary Actions -->
                    <HBox spacing="8" alignment="CENTER">
                        <Button fx:id="passTurnButton" text="Pass" styleClass="secondary-button" 
                                minWidth="60" onAction="#handlePassTurn"/>
                        <Button fx:id="exchangeTilesButton" text="Exchange" styleClass="secondary-button" 
                                minWidth="70" onAction="#handleExchangeTiles"/>
                        <Button fx:id="shuffleRackButton" text="Shuffle" styleClass="secondary-button" 
                                minWidth="60" onAction="#handleShuffleRack"/>
                    </HBox>
                    
                    <!-- Quick Actions -->
                    <HBox spacing="5" alignment="CENTER">
                        <Button fx:id="hintButton" text="ðŸ’¡" styleClass="icon-button" 
                                minWidth="30" maxWidth="30" onAction="#handleHint" />
                        <Button fx:id="undoButton" text="â†¶" styleClass="icon-button" 
                                minWidth="30" maxWidth="30" onAction="#handleUndo" />
                        <Button fx:id="redoButton" text="â†·" styleClass="icon-button" 
                                minWidth="30" maxWidth="30" onAction="#handleRedo" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </bottom>
    
    <!-- Stylesheets -->
    <stylesheets>
        <URL value="@../css/game.css"/>
    </stylesheets>
</BorderPane>
