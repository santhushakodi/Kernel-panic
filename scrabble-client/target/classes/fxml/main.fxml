<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scrabble.client.controller.AppController">
    <top>
        <!-- Menu Bar -->
        <MenuBar>
            <Menu mnemonicParsing="false" text="Game">
                <MenuItem fx:id="newGameMenuItem" mnemonicParsing="false" onAction="#onNewGame" text="New Game" />
                <MenuItem fx:id="joinGameMenuItem" mnemonicParsing="false" onAction="#onJoinGame" text="Join Game" />
                <SeparatorMenuItem />
                <MenuItem fx:id="disconnectMenuItem" disable="true" mnemonicParsing="false" onAction="#onDisconnect" text="Disconnect" />
                <SeparatorMenuItem />
                <MenuItem mnemonicParsing="false" onAction="#onExit" text="Exit" />
            </Menu>
            <Menu mnemonicParsing="false" text="View">
                <CheckMenuItem fx:id="showChatMenuItem" mnemonicParsing="false" selected="true" text="Show Chat" />
                <CheckMenuItem fx:id="showScoresMenuItem" mnemonicParsing="false" selected="true" text="Show Scores" />
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" onAction="#onRules" text="Game Rules" />
                <SeparatorMenuItem />
                <MenuItem mnemonicParsing="false" onAction="#onAbout" text="About" />
            </Menu>
        </MenuBar>
    </top>

    <center>
        <!-- Main content area with stack pane for different views -->
        <StackPane fx:id="contentPane">
            <!-- Welcome Screen -->
            <VBox fx:id="welcomePane" alignment="CENTER" spacing="20.0" styleClass="welcome-pane">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                
                <Label styleClass="welcome-title" text="Welcome to Scrabble" />
                <Label styleClass="welcome-subtitle" text="Choose how you'd like to play:" />
                
                <VBox alignment="CENTER" spacing="15.0">
                    <Button fx:id="playHumanButton" mnemonicParsing="false" onAction="#onPlayAgainstHuman" 
                            prefWidth="200.0" styleClass="play-button" text="Play vs Human" />
                    <Button fx:id="playBotButton" mnemonicParsing="false" onAction="#onPlayAgainstBot" 
                            prefWidth="200.0" styleClass="play-button" text="Play vs Bot" />
                    <Button fx:id="watchGameButton" mnemonicParsing="false" onAction="#onWatchGame" 
                            prefWidth="200.0" styleClass="play-button" text="Watch Game" />
                </VBox>
                
                <VBox alignment="CENTER" spacing="10.0">
                    <Label text="Server Connection:" />
                    <HBox alignment="CENTER" spacing="10.0">
                        <Label fx:id="connectionStatus" styleClass="connection-status" text="Disconnected" />
                        <Button fx:id="connectButton" mnemonicParsing="false" onAction="#onConnect" text="Connect" />
                    </HBox>
                </VBox>
            </VBox>

            <!-- Lobby Screen -->
            <VBox fx:id="lobbyPane" alignment="CENTER" spacing="20.0" styleClass="lobby-pane" visible="false">
                <Label styleClass="lobby-title" text="Game Lobby" />
                
                <VBox alignment="CENTER" spacing="15.0">
                    <Label text="Player Name:" />
                    <TextField fx:id="playerNameField" maxWidth="300.0" promptText="Enter your name" />
                    
                    <Label text="Waiting for opponent..." />
                    <ProgressIndicator fx:id="lobbyProgress" />
                    
                    <Button fx:id="cancelLobbyButton" mnemonicParsing="false" onAction="#onCancelLobby" text="Cancel" />
                </VBox>
            </VBox>

            <!-- Game Screen -->
            <BorderPane fx:id="gamePane" visible="false">
                <!-- Game content will be loaded here dynamically -->
            </BorderPane>
        </StackPane>
    </center>

    <bottom>
        <!-- Status Bar -->
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="status-bar">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            
            <Label fx:id="statusLabel" text="Ready" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="serverStatusLabel" styleClass="server-status" text="Server: Disconnected" />
        </HBox>
    </bottom>
</BorderPane>